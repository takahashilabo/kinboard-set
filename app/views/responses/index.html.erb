<% @responses.each do |res| %>
    <% Response.where(user_id: current_user.uid).each do |res| %>
   <p> 
       <%= @count = @count + 1 %>：
       <%= res.tdate.strftime("%Y/%m/%d %X") %>
       <%= link_to '表示', response_path(res.id) %>
       <%= link_to '削除', response_path(res.id), method: :delete %>
    </p>
    <p>
       <%= res.message %>
    </p>
    <p>
       <% if res.image.attached? %>
           <%= image_tag res.image, width: '10%', height: '10%'  %>
       <% else %>
           <%= image_tag 'n.png', width: '0%', height: '0%' %>
       <% end %>
    </p>
    <% end %>
<% end %>

